<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.aqchen.filterfiesta.ui.photo_editor.PhotoEditorFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/preview_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tool_fragment_container"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tool_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/preview_fragment_container"
        app:layout_constraintBottom_toBottomOf="@id/tool_pager_fragment_container"
        />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tool_pager_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tool_fragment_container"
        app:layout_constraintBottom_toBottomOf="@id/photo_editor_cancel_button"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/photo_editor_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_editor_cancel_button_label"
        app:layout_constraintTop_toTopOf="@id/tool_pager_fragment_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/photo_editor_save_button" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/photo_editor_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_editor_save_button_label"
        app:layout_constraintTop_toTopOf="@id/tool_pager_fragment_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/photo_editor_cancel_button"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
