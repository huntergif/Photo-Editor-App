<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/view_holder_adjustment_card_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        app:cardCornerRadius="@dimen/md_sm_margin"
        app:cardElevation="@dimen/elevation_0"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground" >
            <ImageView
                android:id="@+id/view_holder_adjustment_image"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/sm_margin"
                android:layout_marginHorizontal="@dimen/sm_margin"
                app:layout_constraintBottom_toTopOf="@id/view_holder_adjustment_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/baseline_filter_70"
                app:tint="?attr/colorOnSurfaceVariant"
                android:contentDescription="@string/filter_group_image_content_description" />
            <TextView
                android:id="@+id/view_holder_adjustment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sm_margin"
                android:layout_marginHorizontal="@dimen/sm_margin"
                android:textColor="?attr/colorOnSurfaceVariant"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_holder_adjustment_image"
                android:text="PLACEHOLDER"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
