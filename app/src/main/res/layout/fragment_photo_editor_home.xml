<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.aqchen.filterfiesta.ui.photo_editor.PhotoEditorFragment"
    android:transitionGroup="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/preview_fragment_container"
        android:name="com.aqchen.filterfiesta.ui.photo_editor.image_preview.PhotoEditorImagePreviewFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tool_page_fragment_container"
        />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tool_page_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/xs_margin"
        app:layout_constraintTop_toBottomOf="@id/preview_fragment_container"
        app:layout_constraintBottom_toTopOf="@id/tool_pager_fragment_container"
        />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/photo_editor_tool_pager_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tool_page_fragment_container"
        app:layout_constraintBottom_toTopOf="@id/tool_pager_fragment_container" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/tool_pager_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/sm_margin"
        app:layout_constraintTop_toBottomOf="@id/tool_page_fragment_container"
        app:layout_constraintBottom_toTopOf="@id/photo_editor_bottom_buttons_barrier"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/photo_editor_bottom_buttons_barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="photo_editor_cancel_button,photo_editor_save_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/photo_editor_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_editor_cancel_button_label"
        android:layout_marginVertical="@dimen/sm_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/photo_editor_save_button" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/photo_editor_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/photo_editor_save_button_label"
        android:layout_marginVertical="@dimen/sm_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/photo_editor_cancel_button"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>