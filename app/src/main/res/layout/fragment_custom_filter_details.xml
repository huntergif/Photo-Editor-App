<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.photo_editor.custom_filters.details.CustomFilterDetailsFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/custom_filters_details_filters_label"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:text="@string/custom_filters_details_filters_label"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/custom_filters_details_filters_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_filters_details_filters_label" />

</androidx.constraintlayout.widget.ConstraintLayout>
