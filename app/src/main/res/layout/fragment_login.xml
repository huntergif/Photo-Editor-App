<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aqchen.filterfiesta.ui.auth.LoginFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/adjusting_image_illustration"
                android:maxWidth="@dimen/fab_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="TODO" />

            <TextView
                android:id="@+id/loginTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_title"/>


            <Button
                android:id="@+id/loginSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_submit_label" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>